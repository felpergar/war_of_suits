<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/winner"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/roundWinnerTextView"
        app:layout_constraintEnd_toEndOf="@id/roundWinnerTextView"
        app:layout_constraintStart_toStartOf="@id/roundWinnerTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roundWinnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Magneto" />

    <TextView
        android:id="@+id/magnetoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundWinnerTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roundWinnerTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="viewEnd"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        tools:text="Magneto played" />

    <TextView
        android:id="@+id/professorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roundWinnerTextView"
        app:layout_constraintTop_toBottomOf="@+id/roundWinnerTextView"
        android:textAlignment="viewEnd"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        tools:text="Professor played" />

</androidx.constraintlayout.widget.ConstraintLayout>